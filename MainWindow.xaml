<Window x:Class="testapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Window.Resources>
        <local:RectConverter x:Key="RectConverter" />
    </Window.Resources>

    <Grid>
        <MediaElement x:Name="BackgroundVideo"
                      Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Stop"
                      MediaEnded="BackgroundVideo_MediaEnded">

            <MediaElement.Clip>
                <RectangleGeometry RadiusX="30" RadiusY="30">
                    <RectangleGeometry.Rect>
                        <MultiBinding Converter="{StaticResource RectConverter}">
                            <Binding ElementName="BackgroundVideo" Path="ActualWidth"/>
                            <Binding ElementName="BackgroundVideo" Path="ActualHeight"/>
                        </MultiBinding>
                    </RectangleGeometry.Rect>
                </RectangleGeometry>
            </MediaElement.Clip>
        </MediaElement>
    </Grid>
</Window>
